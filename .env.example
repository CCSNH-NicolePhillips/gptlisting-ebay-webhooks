# === Server ===
PORT=3000
APP_URL=http://localhost:3000

# === Dropbox OAuth (create an app at https://www.dropbox.com/developers/apps) ===
DROPBOX_CLIENT_ID=
DROPBOX_CLIENT_SECRET=
DROPBOX_REDIRECT_URI=http://localhost:3000/auth/dropbox/callback

# === eBay OAuth & Sell APIs ===
EBAY_ENV=PROD # or SANDBOX
EBAY_CLIENT_ID=
EBAY_CLIENT_SECRET=
EBAY_RU_NAME= # Your eBay Registered Redirect URI (RuName), e.g. YourApp-YourCompany-Prod-1234567890
EBAY_REFRESH_TOKEN= # You can leave blank initially; app will mint and store per-user later

# Business policy IDs (required for Inventory offers)
EBAY_PAYMENT_POLICY_ID=
EBAY_RETURN_POLICY_ID=
EBAY_FULFILLMENT_POLICY_ID=

EBAY_MERCHANT_LOCATION_KEY=

# === App behavior ===
DEFAULT_MARKETPLACE_ID=EBAY_US
DEFAULT_CATEGORY_ID=177011
PROMOTED_CAMPAIGN_ID= # optional existing campaign id
PUBLISH_MODE=draft # draft | post | legacy-post
OCR_PROVIDER=none # none | tesseract (if you wire it)
DATA_DIR=.tmp
