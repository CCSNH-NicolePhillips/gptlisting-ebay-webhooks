{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["@netlify/functions", "node", "jest"],
    "lib": ["ES2022", "DOM"]
  },
  "include": [
    "src",
    "functions/**/*.ts",
    "functions/**/*.d.ts",
    "netlify/functions/**/*.ts",
    "tests/**/*.ts"
  ]
}
